<h1>Listing local_deliveries in <%= link_to @local.name, restaurant_local_path(@local.restaurant, @local) %></h1>
<table>
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>District</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @local_deliveries.each do |local_delivery| %>
      <tr>
        <td><%= local_delivery.start_time.strftime("%H:%M") %></td>
        <td><%= local_delivery.end_time.strftime("%H:%M") %></td>
        <td><%= local_delivery.district.name %></td>
        <td>| <%= link_to 'Show', restaurant_local_local_delivery_path(@local.restaurant, @local, local_delivery) %></td>
        <td>| <%= link_to 'Edit', edit_restaurant_local_local_delivery_path(@local.restaurant, @local, local_delivery) %></td>
        <td>| <%= link_to 'Destroy', restaurant_local_local_delivery_path(@local.restaurant, @local, local_delivery), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

