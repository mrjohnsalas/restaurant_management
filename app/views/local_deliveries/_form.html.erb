<%= simple_form_for @local_delivery, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :start_time %>
  <%= error_span(@local_delivery[:start_time]) %>
  <%= f.input :end_time %>
  <%= error_span(@local_delivery[:end_time]) %>
  <%= f.input :local_id %>
  <%= error_span(@local_delivery[:local_id]) %>
  <%= f.input :district_id %>
  <%= error_span(@local_delivery[:district_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                local_deliveries_path, :class => 'btn btn-default' %>
<% end %>
