<%= simple_form_for @local_photo, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :index %>
  <%= error_span(@local_photo[:index]) %>
  <%= f.input :local_id %>
  <%= error_span(@local_photo[:local_id]) %>
  <%= f.input :photo_file_name %>
  <%= error_span(@local_photo[:photo_file_name]) %>
  <%= f.input :photo_content_type %>
  <%= error_span(@local_photo[:photo_content_type]) %>
  <%= f.input :photo_file_size %>
  <%= error_span(@local_photo[:photo_file_size]) %>
  <%= f.input :photo_updated_at %>
  <%= error_span(@local_photo[:photo_updated_at]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                local_photos_path, :class => 'btn btn-default' %>
<% end %>
