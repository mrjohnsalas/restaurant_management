<%= simple_form_for @order_delivery, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :order_id %>
  <%= error_span(@order_delivery[:order_id]) %>
  <%= f.input :user_address_id %>
  <%= error_span(@order_delivery[:user_address_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                order_deliveries_path, :class => 'btn btn-default' %>
<% end %>
