<h1>Listing order_deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>User address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_deliveries.each do |order_delivery| %>
      <tr>
        <td><%= order_delivery.order %></td>
        <td><%= order_delivery.user_address %></td>
        <td>| <%= link_to 'Show', order_delivery %></td>
        <td>| <%= link_to 'Edit', edit_order_delivery_path(order_delivery) %></td>
        <td>| <%= link_to 'Destroy', order_delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

