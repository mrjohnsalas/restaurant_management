<h1>Listing order_deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Address Id</th>
      <th>Address Name</th>
      <th>Address</th>
      <th>District</th>
      <th>Province</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_deliveries.each do |order_delivery| %>
      <tr>
        <td><%= order_delivery.user_address.id %></td>
        <td><%= order_delivery.user_address.name %></td>
        <td><%= order_delivery.user_address.address %></td>
        <td><%= order_delivery.user_address.district.name %></td>
        <td><%= order_delivery.user_address.district.province.name %></td>
        <td>| <%= link_to 'Show', order_order_delivery_path(@order, order_delivery) %></td>
        <td>| <%= link_to 'Edit', edit_order_order_delivery_path(@order, order_delivery) %></td>
        <td>| <%= link_to 'Destroy', order_order_delivery_path(@order, order_delivery), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order delivery', new_order_order_delivery_path(@order) %>
