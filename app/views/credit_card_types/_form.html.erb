<%= simple_form_for @credit_card_type, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@credit_card_type[:name]) %>
  <%= f.input :logo_file_name %>
  <%= error_span(@credit_card_type[:logo_file_name]) %>
  <%= f.input :logo_content_type %>
  <%= error_span(@credit_card_type[:logo_content_type]) %>
  <%= f.input :logo_file_size %>
  <%= error_span(@credit_card_type[:logo_file_size]) %>
  <%= f.input :logo_updated_at %>
  <%= error_span(@credit_card_type[:logo_updated_at]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                credit_card_types_path, :class => 'btn btn-default' %>
<% end %>
