<%= simple_form_for @credit_card_type, :html => { :class => 'form-horizontal', multipart: :true } do |f| %>
  <%= f.input :name %>
  <%= error_span(@credit_card_type[:name]) %>
  
  <%= f.input :logo, as: :file %> 
  <%= error_span(@credit_card_type[:logo]) %>
  
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                credit_card_types_path, :class => 'btn btn-default' %>
<% end %>
