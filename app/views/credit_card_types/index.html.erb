<%- model_class = CreditCardType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:logo_file_name) %></th>
      <th><%= model_class.human_attribute_name(:logo_content_type) %></th>
      <th><%= model_class.human_attribute_name(:logo_file_size) %></th>
      <th><%= model_class.human_attribute_name(:logo_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @credit_card_types.each do |credit_card_type| %>
      <tr>
        <td><%= link_to credit_card_type.id, credit_card_type_path(credit_card_type) %></td>
        <td><%= credit_card_type.name %></td>
        <td><%= credit_card_type.logo_file_name %></td>
        <td><%= credit_card_type.logo_content_type %></td>
        <td><%= credit_card_type.logo_file_size %></td>
        <td><%= credit_card_type.logo_updated_at %></td>
        <td><%=l credit_card_type.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_credit_card_type_path(credit_card_type), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      credit_card_type_path(credit_card_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_credit_card_type_path,
            :class => 'btn btn-primary' %>
