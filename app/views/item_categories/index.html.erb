<h1>Listing item_categories</h1>
<%= form_tag item_categories_path, method: :get do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search Item Categories", name: nil %>
	</p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_categories.each do |item_category| %>
      <tr>
        <td><%= item_category.name %></td>
        <td>| <%= link_to 'Show', item_category %></td>
        <td>| <%= link_to 'Edit', edit_item_category_path(item_category) %></td>
        <td>| <%= link_to 'Destroy', item_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @item_categories, renderer: BootstrapPagination::Rails, previous_label: "< Anterior", next_label: "Siguiente >" %>
<br>
<%= link_to 'New Item category', new_item_category_path %>
