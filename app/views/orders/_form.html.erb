<%= simple_form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :order_date %>
  <%= error_span(@order[:order_date]) %>
  <%= f.input :total_discount %>
  <%= error_span(@order[:total_discount]) %>
  <%= f.input :sub_total %>
  <%= error_span(@order[:sub_total]) %>
  <%= f.input :igv %>
  <%= error_span(@order[:igv]) %>
  <%= f.input :total %>
  <%= error_span(@order[:total]) %>
  <%= f.input :local_id %>
  <%= error_span(@order[:local_id]) %>
  <%= f.input :user_id %>
  <%= error_span(@order[:user_id]) %>
  <%= f.input :payment_type_id %>
  <%= error_span(@order[:payment_type_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn btn-default' %>
<% end %>
