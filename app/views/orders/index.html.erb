<h1>Listing orders</h1>
<%= form_tag orders_path, method: :get do %>
	<p>
		<%= date_field_tag :search, params[:search] %>
		<%= submit_tag "Search Orders", name: nil %>
	</p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Order date</th>
      <th>Sub total</th>
      <th>Total discount</th>
      <th>Igv</th>
      <th>Total</th>
      <th>Local</th>
      <th>Payment type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= order.sub_total %></td>
        <td><%= order.total_discount %></td>
        <td><%= order.igv %></td>
        <td><%= order.total %></td>
        <td><%= order.local.name %></td>
        <td><%= order.payment_type.name %></td>
        <td>| <%= link_to 'Show', order %></td>
        <td>| <%= link_to 'Edit', edit_order_path(order) %></td>
        <td>| <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>| <%= link_to 'View Details', order_order_details_path(order) %></td>
        <td>| <%= link_to 'View Delivery', order_order_deliveries_path(order) %></td>
        <td>| <%= link_to 'View Credit Card', order_order_cards_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @orders, renderer: BootstrapPagination::Rails, previous_label: "< Anterior", next_label: "Siguiente >" %>
<br>
<%= link_to 'New Order', new_order_path %>
