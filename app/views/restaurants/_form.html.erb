<%= simple_form_for @restaurant, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@restaurant[:name]) %>
  <%= f.input :phone_1 %>
  <%= error_span(@restaurant[:phone_1]) %>
  <%= f.input :phone_2 %>
  <%= error_span(@restaurant[:phone_2]) %>
  <%= f.input :email_1 %>
  <%= error_span(@restaurant[:email_1]) %>
  <%= f.input :email_2 %>
  <%= error_span(@restaurant[:email_2]) %>
  <%= f.input :web_page %>
  <%= error_span(@restaurant[:web_page]) %>
  <%= f.input :facebook %>
  <%= error_span(@restaurant[:facebook]) %>
  <%= f.input :twitter %>
  <%= error_span(@restaurant[:twitter]) %>
  <%= f.input :instagram %>
  <%= error_span(@restaurant[:instagram]) %>
  <%= f.input :allow_point %>
  <%= error_span(@restaurant[:allow_point]) %>
  <%= f.input :min_points %>
  <%= error_span(@restaurant[:min_points]) %>
  <%= f.input :logo, as: :file %>
  <%= error_span(@restaurant[:logo]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurants_path, :class => 'btn btn-default' %>
<% end %>
