<%- model_class = Restaurant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:phone_1) %></th>
      <th><%= model_class.human_attribute_name(:phone_2) %></th>
      <th><%= model_class.human_attribute_name(:email_1) %></th>
      <th><%= model_class.human_attribute_name(:email_2) %></th>
      <th><%= model_class.human_attribute_name(:web_page) %></th>
      <th><%= model_class.human_attribute_name(:facebook) %></th>
      <th><%= model_class.human_attribute_name(:twitter) %></th>
      <th><%= model_class.human_attribute_name(:instagram) %></th>
      <th><%= model_class.human_attribute_name(:allow_point) %></th>
      <th><%= model_class.human_attribute_name(:min_points) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:object_type_id) %></th>
      <th><%= model_class.human_attribute_name(:logo_file_name) %></th>
      <th><%= model_class.human_attribute_name(:logo_content_type) %></th>
      <th><%= model_class.human_attribute_name(:logo_file_size) %></th>
      <th><%= model_class.human_attribute_name(:logo_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.id, restaurant_path(restaurant) %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.phone_1 %></td>
        <td><%= restaurant.phone_2 %></td>
        <td><%= restaurant.email_1 %></td>
        <td><%= restaurant.email_2 %></td>
        <td><%= restaurant.web_page %></td>
        <td><%= restaurant.facebook %></td>
        <td><%= restaurant.twitter %></td>
        <td><%= restaurant.instagram %></td>
        <td><%= restaurant.allow_point %></td>
        <td><%= restaurant.min_points %></td>
        <td><%= restaurant.user_id %></td>
        <td><%= restaurant.object_type_id %></td>
        <td><%= restaurant.logo_file_name %></td>
        <td><%= restaurant.logo_content_type %></td>
        <td><%= restaurant.logo_file_size %></td>
        <td><%= restaurant.logo_updated_at %></td>
        <td><%=l restaurant.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_restaurant_path(restaurant), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      restaurant_path(restaurant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_restaurant_path,
            :class => 'btn btn-primary' %>
