<%= simple_form_for @local_card, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :local_id %>
  <%= error_span(@local_card[:local_id]) %>
  <%= f.input :credit_card_type_id %>
  <%= error_span(@local_card[:credit_card_type_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                local_cards_path, :class => 'btn btn-default' %>
<% end %>
