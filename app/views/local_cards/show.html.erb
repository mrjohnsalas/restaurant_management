<%- model_class = LocalCard -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:local_id) %>:</strong></dt>
  <dd><%= @local_card.local_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:credit_card_type_id) %>:</strong></dt>
  <dd><%= @local_card.credit_card_type_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              local_cards_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_local_card_path(@local_card), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              local_card_path(@local_card),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
