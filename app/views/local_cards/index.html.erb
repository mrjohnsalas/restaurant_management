<h1>Listing local_cards in <%= link_to @local.name, restaurant_local_path(@local.restaurant, @local) %></h1>

<table>
  <thead>
    <tr>
      <th>Credit card type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @local_cards.each do |local_card| %>
      <tr>
        <td><%= local_card.credit_card_type.name %></td>
        <td>| <%= link_to 'Show', restaurant_local_local_card_path(@local.restaurant, @local, local_card) %></td>
        <td>| <%= link_to 'Edit', edit_restaurant_local_local_card_path(@local.restaurant, @local, local_card) %></td>
        <td>| <%= link_to 'Destroy', restaurant_local_local_card_path(@local.restaurant, @local, local_card), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Local card', new_restaurant_local_local_card_path(@local.restaurant, @local) %>
