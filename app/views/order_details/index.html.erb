<h1>Listing order_details</h1>

<table>
  <thead>
    <tr>
      <th>Item Id</th>
      <th>Item Name</th>
      <th>Quantity</th>
      <th>Unit price</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.menu.item.id %></td>
        <td><%= order_detail.menu.item.name %></td>
        <td><%= order_detail.quantity %></td>
        <td><%= order_detail.unit_price %></td>
        <td><%= order_detail.total %></td>
        <td>| <%= link_to 'Show', order_order_detail_path(@order, order_detail) %></td>
        <td>| <%= link_to 'Edit', edit_order_order_detail_path(@order, order_detail) %></td>
        <td>| <%= link_to 'Destroy', order_order_detail_path(@order, order_detail), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order detail', new_order_order_detail_path(@order) %>
