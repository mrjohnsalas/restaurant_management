<%= simple_form_for @order_detail, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :quantity %>
  <%= error_span(@order_detail[:quantity]) %>
  <%= f.input :unit_price %>
  <%= error_span(@order_detail[:unit_price]) %>
  <%= f.input :total %>
  <%= error_span(@order_detail[:total]) %>
  <%= f.input :order_id %>
  <%= error_span(@order_detail[:order_id]) %>
  <%= f.input :menu_id %>
  <%= error_span(@order_detail[:menu_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                order_details_path, :class => 'btn btn-default' %>
<% end %>
