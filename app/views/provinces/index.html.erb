<h1>Listing provinces in <%= link_to @country.name, @country %></h1>
<%= form_tag country_provinces_path(@country), method: :get do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search Provinces", name: nil %>
	</p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @provinces.each do |province| %>
      <tr>
        <td><%= province.id %></td>
        <td><%= province.name %></td>
        <td>(<%= province.districts.count %> districts)</td>
        <td>| <%= link_to 'Show', country_province_path(@country, province) %></td>
        <td>| <%= link_to 'Edit', edit_country_province_path(@country, province) %></td>
        <td>| <%= link_to 'Destroy', country_province_path(@country, province), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>| <%= link_to 'View Districts', country_province_districts_path(@country, province) %></td>
        <td>| <%= link_to 'New District', new_country_province_district_path(@country, province) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @provinces, renderer: BootstrapPagination::Rails, previous_label: "< Anterior", next_label: "Siguiente >" %>
<br>
<%= link_to 'New Province', new_country_province_path(@country) %>
<%= link_to 'Countries', countries_path %>