<%= simple_form_for [@country, @province], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@province[:name]) %>
  <%= f.input :country_id %>
  <%= error_span(@province[:country_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                country_provinces_path, :class => 'btn btn-default' %>
<% end %>
