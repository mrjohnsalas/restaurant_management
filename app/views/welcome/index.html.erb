<h1>Welcome#index</h1>
<p>Find me in app/views/welcome/index.html.erb</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone 1</th>
      <th>Email 1</th>
      <th>Web page</th>
      <th>Facebook</th>
      <th>Twitter</th>
      <th>Instagram</th>
      <th>Allow point</th>
      <th>Min points</th>
      <th>Object type</th>
      <th>Starts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.phone_1 %></td>
        <td><%= restaurant.email_1 %></td>
        <td><%= restaurant.web_page %></td>
        <td><%= restaurant.facebook %></td>
        <td><%= restaurant.twitter %></td>
        <td><%= restaurant.instagram %></td>
        <td><%= restaurant.allow_point %></td>
        <td><%= restaurant.min_points %></td>
        <td><%= restaurant.object_type.name %></td>
        <td>| <%= link_to 'Show', restaurant %></td>
        <td>| <%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td>| <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>| <%= link_to 'Locals', restaurant_locals_path(restaurant) %></td>
        <td>| <%= link_to 'Items', restaurant_items_path(restaurant) %></td>
        <td>| <%= link_to 'Reviews', restaurant_user_reviews_path(restaurant, nil) %></td>
        <% if restaurant.user_reviews.blank? %>
          <td>| <div class="star-rating" data-score=0></div></td>
        <% else %>
          <td>| <div class="star-rating" data-score=<%= restaurant.user_reviews.average(:rating).round(2) %>></div></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>