<%= simple_form_for @user_point, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :quantity %>
  <%= error_span(@user_point[:quantity]) %>
  <%= f.input :restaurant_id %>
  <%= error_span(@user_point[:restaurant_id]) %>
  <%= f.input :user_id %>
  <%= error_span(@user_point[:user_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_points_path, :class => 'btn btn-default' %>
<% end %>
