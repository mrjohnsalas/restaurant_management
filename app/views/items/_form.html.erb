<%= simple_form_for [@restaurant, @item], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@item[:name]) %>
  <%= f.input :unit_cost %>
  <%= error_span(@item[:unit_cost]) %>
  <%= f.input :unit_price %>
  <%= error_span(@item[:unit_price]) %>
  <%= f.association :restaurant %>
  <%= error_span(@item[:restaurant_id]) %>
  <%= f.association :item_category %>
  <%= error_span(@item[:item_category_id]) %>
  <%= f.association :food_category %>
  <%= error_span(@item[:food_category_id]) %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurant_items_path, :class => 'btn btn-default' %>
<% end %>
