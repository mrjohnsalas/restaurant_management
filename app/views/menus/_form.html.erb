<%= simple_form_for @menu, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :menu_date %>
  <%= error_span(@menu[:menu_date]) %>
  <%= f.input :stock %>
  <%= error_span(@menu[:stock]) %>
  <%= f.input :local_id %>
  <%= error_span(@menu[:local_id]) %>
  <%= f.input :item_id %>
  <%= error_span(@menu[:item_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                menus_path, :class => 'btn btn-default' %>
<% end %>
