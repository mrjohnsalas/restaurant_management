<h1>Shop menus in <%= link_to @local.name, restaurant_local_path(@local.restaurant, @local) %></h1>
<%= form_tag shop_restaurant_local_menus_path(@local.restaurant, @local), method: :get do %>
	<p>
		<%= date_field_tag :search, params[:search] %>
		<%= submit_tag "Search Menus", name: nil %>
	</p>
<% end %>
<%= form_tag add_to_shopping_cart_restaurant_local_menus_path(@local.restaurant, @local), method: :put do %>
<table>
  <thead>
    <tr>
      <% if @today %>
        <th>Select</th>
      <% end %>
      <th>Menu date</th>
      <th>Stock</th>
      <th>Item</th>
      <th>Item Category</th>
      <% if @today %>
        <th>Quantity</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <% if @today %>
          <td><%= check_box_tag "menu_ids[]", menu.id %></td>
        <% end %>
        <td><%= menu.menu_date %></td>
        <td><%= menu.stock %></td>
        <td><%= menu.item.name %></td>
        <td><%= menu.item.item_category.name %></td>
        <% if @today %>
          <td><%= number_field_tag "quantities[]", "0" %></td>
        <% end %>
        <td>| <%= link_to 'Show', restaurant_local_menu_path(@local.restaurant, @local, menu) %></td>
        <td>| <%= link_to 'Edit', edit_restaurant_local_menu_path(@local.restaurant, @local, menu) %></td>
        <td>| <%= link_to 'Destroy', restaurant_local_menu_path(@local.restaurant, @local, menu), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @menus, renderer: BootstrapPagination::Rails, previous_label: "< Anterior", next_label: "Siguiente >" %>
<br>
<% if @today %>
  <%= submit_tag "Add to Shopping Cart" %>
<% end %>
<% end %>
<%= link_to 'New Menu', new_restaurant_local_menu_path(@local.restaurant, @local) %>