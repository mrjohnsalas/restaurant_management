<%= simple_form_for @country, :html => { :class => 'form-horizontal' } do |f| %>
<%= f.input :name %>
<%= error_span(@country[:name]) %>

<%= f.button :submit, :class => 'btn-primary' %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
countries_path, :class => 'btn btn-default' %>
<% end %>