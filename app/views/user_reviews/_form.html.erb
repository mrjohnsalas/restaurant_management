<%= simple_form_for @user_review, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :rating %>
  <%= error_span(@user_review[:rating]) %>
  <%= f.input :comment %>
  <%= error_span(@user_review[:comment]) %>
  <%= f.input :object_type_id %>
  <%= error_span(@user_review[:object_type_id]) %>
  <%= f.input :user_id %>
  <%= error_span(@user_review[:user_id]) %>
  <%= f.input :item_id %>
  <%= error_span(@user_review[:item_id]) %>
  <%= f.input :restaurant_id %>
  <%= error_span(@user_review[:restaurant_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_reviews_path, :class => 'btn btn-default' %>
<% end %>
