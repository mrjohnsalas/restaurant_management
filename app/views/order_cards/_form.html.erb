<%= simple_form_for @order_card, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :order_id %>
  <%= error_span(@order_card[:order_id]) %>
  <%= f.input :user_card_id %>
  <%= error_span(@order_card[:user_card_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                order_cards_path, :class => 'btn btn-default' %>
<% end %>
