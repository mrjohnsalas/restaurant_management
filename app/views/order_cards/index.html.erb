<h1>Listing order_cards</h1>

<table>
  <thead>
    <tr>
      <th>Card Id</th>
      <th>Card Number</th>
      <th>Card Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_cards.each do |order_card| %>
      <tr>
        <td><%= order_card.user_card.id %></td>
        <td><%= order_card.user_card.card_number %></td>
        <td><%= order_card.user_card.credit_card_type.name %></td>
        <td>| <%= link_to 'Show', order_order_card_path(@order, order_card) %></td>
        <td>| <%= link_to 'Edit', edit_order_order_card_path(@order, order_card) %></td>
        <td>| <%= link_to 'Destroy', order_order_card_path(@order, order_card), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order card', new_order_order_card_path(@order) %>
