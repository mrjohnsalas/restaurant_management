<h1>Listing locals in <%= link_to @restaurant.name, @restaurant %></h1>
<%= form_tag restaurant_locals_path(@restaurant), method: :get do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search Locals", name: nil %>
	</p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone 1</th>
      <th>Email 1</th>
      <th>Allow delivery</th>
      <th>Allow parking</th>
      <th>Allow reservation</th>
      <th>Allow credit card</th>
      <th>Restaurant</th>
      <th>District</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
        <td><%= local.name %></td>
        <td><%= local.phone_1 %></td>
        <td><%= local.email_1 %></td>
        <td><%= local.allow_delivery %></td>
        <td><%= local.allow_parking %></td>
        <td><%= local.allow_reservation %></td>
        <td><%= local.allow_credit_card %></td>
        <td><%= local.restaurant.name %></td>
        <td><%= local.district.name %></td>
        <td>| <%= link_to 'Show', restaurant_local_path(@restaurant, local) %></td>
        <td>| <%= link_to 'Edit', edit_restaurant_local_path(@restaurant, local) %></td>
        <td>| <%= link_to 'Destroy', restaurant_local_path(@restaurant, local), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>| <%= link_to 'View Photos', restaurant_local_local_photos_path(@restaurant, local) %></td>
        <td>| <%= link_to 'View Deliveries', restaurant_local_local_deliveries_path(@restaurant, local) %></td>
        <td>| <%= link_to 'View Credit Cards', restaurant_local_local_cards_path(@restaurant, local) %></td>
        <td>| <%= link_to 'View Menus', restaurant_local_menus_path(@restaurant, local) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @locals, renderer: BootstrapPagination::Rails, previous_label: "< Anterior", next_label: "Siguiente >" %>
<br>
<%= link_to 'New Local', new_restaurant_local_path %>
