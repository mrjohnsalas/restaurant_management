<%- model_class = Local -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @local.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_1) %>:</strong></dt>
  <dd><%= @local.phone_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_2) %>:</strong></dt>
  <dd><%= @local.phone_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email_1) %>:</strong></dt>
  <dd><%= @local.email_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email_2) %>:</strong></dt>
  <dd><%= @local.email_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @local.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:allow_delivery) %>:</strong></dt>
  <dd><%= @local.allow_delivery %></dd>
  <dt><strong><%= model_class.human_attribute_name(:allow_parking) %>:</strong></dt>
  <dd><%= @local.allow_parking %></dd>
  <dt><strong><%= model_class.human_attribute_name(:allow_reservation) %>:</strong></dt>
  <dd><%= @local.allow_reservation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:allow_credit_card) %>:</strong></dt>
  <dd><%= @local.allow_credit_card %></dd>
  <dt><strong><%= model_class.human_attribute_name(:restaurant_id) %>:</strong></dt>
  <dd><%= @local.restaurant_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:district_id) %>:</strong></dt>
  <dd><%= @local.district_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              locals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_local_path(@local), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              local_path(@local),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
