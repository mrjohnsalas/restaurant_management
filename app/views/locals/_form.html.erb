<%= simple_form_for [@restaurant, @local], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@local[:name]) %>
  <%= f.input :phone_1 %>
  <%= error_span(@local[:phone_1]) %>
  <%= f.input :phone_2 %>
  <%= error_span(@local[:phone_2]) %>
  <%= f.input :email_1 %>
  <%= error_span(@local[:email_1]) %>
  <%= f.input :email_2 %>
  <%= error_span(@local[:email_2]) %>
  <%= f.input :description %>
  <%= error_span(@local[:description]) %>
  <%= f.input :allow_delivery %>
  <%= error_span(@local[:allow_delivery]) %>
  <%= f.input :allow_parking %>
  <%= error_span(@local[:allow_parking]) %>
  <%= f.input :allow_reservation %>
  <%= error_span(@local[:allow_reservation]) %>
  <%= f.input :allow_credit_card %>
  <%= error_span(@local[:allow_credit_card]) %>
  <%= f.association :restaurant %>
  <%= error_span(@local[:restaurant_id]) %>
  <%= f.association :district %>
  <%= error_span(@local[:district_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurant_locals_path, :class => 'btn btn-default' %>
<% end %>
