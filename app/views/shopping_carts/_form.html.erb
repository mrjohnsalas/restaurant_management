<%= simple_form_for @shopping_cart, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :quantity %>
  <%= error_span(@shopping_cart[:quantity]) %>
  <%= f.input :menu_id %>
  <%= error_span(@shopping_cart[:menu_id]) %>
  <%= f.input :user_id %>
  <%= error_span(@shopping_cart[:user_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                shopping_carts_path, :class => 'btn btn-default' %>
<% end %>
