<%= simple_form_for @user_address, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@user_address[:name]) %>
  <%= f.input :address %>
  <%= error_span(@user_address[:address]) %>
  <%= f.input :is_default %>
  <%= error_span(@user_address[:is_default]) %>
  <%= f.association :district %>
  <%= error_span(@user_address[:district_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_addresses_path, :class => 'btn btn-default' %>
<% end %>
