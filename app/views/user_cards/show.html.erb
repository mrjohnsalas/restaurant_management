<%- model_class = UserCard -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:card_number) %>:</strong></dt>
  <dd><%= @user_card.card_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_default) %>:</strong></dt>
  <dd><%= @user_card.is_default %></dd>
  <dt><strong><%= model_class.human_attribute_name(:credit_card_type_id) %>:</strong></dt>
  <dd><%= @user_card.credit_card_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @user_card.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              user_cards_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_card_path(@user_card), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_card_path(@user_card),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
