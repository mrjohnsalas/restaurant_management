<%= simple_form_for @user_card, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :card_number %>
  <%= error_span(@user_card[:card_number]) %>
  <%= f.input :is_default %>
  <%= error_span(@user_card[:is_default]) %>
  <%= f.associate :credit_card_type %>
  <%= error_span(@user_card[:credit_card_type_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_cards_path, :class => 'btn btn-default' %>
<% end %>
