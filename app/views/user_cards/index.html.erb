<h1>Listing user_cards</h1>

<table>
  <thead>
    <tr>
      <th>Card number</th>
      <th>Is default</th>
      <th>Credit card type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_cards.each do |user_card| %>
      <tr>
        <td><%= user_card.card_number %></td>
        <td><%= user_card.is_default %></td>
        <td><%= user_card.credit_card_type.name %></td>
        <td>| <%= link_to 'Show', user_card %></td>
        <td>| <%= link_to 'Edit', edit_user_card_path(user_card) %></td>
        <td>| <%= link_to 'Destroy', user_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

